# Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to git (it's in .gitignore)

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Development (Docker Compose)
DATABASE_URL="postgresql://postgres:password@localhost:5432/talentflow_dev"

# Production (Example: Neon/Supabase)
# DATABASE_URL="postgresql://user:password@db.neon.tech:5432/talentflow_prod?sslmode=require"

# ============================================
# AUTHENTICATION (JWT)
# ============================================
# IMPORTANT: Change this in production!
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# ============================================
# KAFKA (Message Queue)
# ============================================
# Development (Docker Compose)
KAFKA_BROKERS="localhost:9092"
KAFKA_CLIENT_ID="talentflow-api"

# Production (Example: Upstash Kafka)
# KAFKA_BROKERS="creative-fox-12345.upstash.io:9092"
# KAFKA_USERNAME="your-username"
# KAFKA_PASSWORD="your-password"
# KAFKA_SASL_MECHANISM="SCRAM-SHA-256"

# ============================================
# REDIS (Cache)
# ============================================
# Development (Docker Compose)
REDIS_HOST="localhost"
REDIS_PORT=6379

# Production (Example: Upstash Redis)
# REDIS_URL="rediss://default:token@redis.upstash.io:6379"

# ============================================
# STORAGE (S3/MinIO)
# ============================================
# Development (MinIO via Docker Compose)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_BUCKET="talentflow-cvs"
S3_REGION="us-east-1"
S3_FORCE_PATH_STYLE=true

# Production (AWS S3)
# S3_ENDPOINT="" # Leave empty for AWS S3
# S3_ACCESS_KEY="AKIA..."
# S3_SECRET_KEY="your-aws-secret-key"
# S3_BUCKET="talentflow-prod-cvs"
# S3_REGION="us-east-1"
# S3_FORCE_PATH_STYLE=false

# ============================================
# OPENAI API (Phase 2 - AI Matching)
# ============================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# ============================================
# VECTOR DATABASE (Phase 2)
# ============================================
# Pinecone
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-west1-gcp"
PINECONE_INDEX="talentflow-candidates"

# OR Weaviate
# WEAVIATE_URL="http://localhost:8080"
# WEAVIATE_API_KEY="your-weaviate-api-key"

# ============================================
# EMAIL SERVICE (Phase 2 - Notifications)
# ============================================
# SendGrid
SENDGRID_API_KEY="SG...."
EMAIL_FROM="noreply@talentflow.ai"

# OR AWS SES
# AWS_SES_REGION="us-east-1"
# AWS_SES_ACCESS_KEY="AKIA..."
# AWS_SES_SECRET_KEY="your-aws-secret-key"

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL="debug" # debug | info | warn | error

# Sentry (Optional)
# SENTRY_DSN="https://...@sentry.io/..."

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TTL=60 # seconds
RATE_LIMIT_MAX=100 # requests per TTL

# ============================================
# CORS
# ============================================
# Development
CORS_ORIGIN="http://localhost:3001"

# Production (comma-separated)
# CORS_ORIGIN="https://app.talentflow.ai,https://www.talentflow.ai"

# ============================================
# FRONTEND URL (for emails, redirects)
# ============================================
# Development
FRONTEND_URL="http://localhost:3001"

# Production
# FRONTEND_URL="https://app.talentflow.ai"

# ============================================
# WEBHOOK SECRETS (for external integrations)
# ============================================
# Example: Stripe webhook secret
# STRIPE_WEBHOOK_SECRET="whsec_..."
